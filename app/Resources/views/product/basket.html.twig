{% extends "::base.html.twig" %}

{% block title %}Koszyk{% endblock %}

{% block body %}
    
    <h1>{{ block('title') }}</h1>
    
    <a href='{{ path('product_list') }}'>Lista produktów</a>
    <br><br>

    {% if basket.products|length > 0 %}
        <a href='{{ path('product_basket_clear') }}' class='btn btn-warning'>Wyczyść koszyk</a>
        <br><br>
    {% endif %}
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa produktu</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for id, product in basket.products %}
                <tr>
                    <td>{{ id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td><a class='btn btn-danger btn-sm pull-right' href="{{ path('product_remove_form_cart', {'id' : id}) }}">Usuń z koszyka</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nie znaleziono produktów.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
